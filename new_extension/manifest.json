{
  "name": "Show me bug",
  "description": "Provide convenient way to show testing process to other people",
  "version": "0.0.1",
  "permissions": [
    "tabs",
    "tabCapture",
    "debugger"
  ],
  "background": {
    "scripts": ["lib/jquery-2.1.3.min.js", "lib/adapter.js", "lib/socket.io-1.3.4.js", "src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Show testing process",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}